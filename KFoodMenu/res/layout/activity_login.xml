<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_food2"
    android:orientation="vertical"
    tools:context="com.example.iviettech_final_project.LoginActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:text="Đăng nhập với:" />

   <LinearLayout
       android:id="@+id/LinearLayout1"
       android:layout_width="match_parent"
       android:layout_margin="10dp"
       android:gravity="center"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:padding="10dp"
            android:layout_height="80dp"
            android:src="@drawable/food_normal" />
  
    </LinearLayout>

   <TableLayout
       android:layout_width="wrap_content"
       android:layout_gravity="center"
       android:layout_height="wrap_content" >

       <TableRow
           android:id="@+id/tableRow1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:textSize="15sp"
               android:textColor="#ffffff"
               android:layout_height="wrap_content"
               android:text="Tên đăng nhập:" />

           <EditText
               android:id="@+id/et_username"
               android:layout_width="wrap_content"
               android:lines="1"
               android:layout_height="wrap_content"
               android:ems="10" >

               <requestFocus />
           </EditText>

       </TableRow>

       <TableRow
           android:id="@+id/tableRow2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" >

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="15sp"
               android:textColor="#ffffff"
               android:text="Mật khẩu:" />

           <EditText
               android:id="@+id/et_password"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:ems="10"
               android:inputType="textPassword" />

       </TableRow>

   </TableLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" >

       <Button
           android:id="@+id/bt_login"     
           android:layout_width="wrap_content" 
           android:layout_gravity="center"
           android:layout_height="wrap_content"
           android:text="Đăng nhập" />

    

   </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent" >

       <Button
           android:id="@+id/bt_create_account"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="70dp"
           android:text="Tạo tài khoản KFood" />

       <TextView
           android:id="@+id/tv_sign_guest"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15sp"
           android:layout_below="@+id/bt_create_account"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="26dp"
           android:textColorHighlight="#ff0000"
           android:textColor="#ffffff"
           android:text="Khách thăm quan" />

       <CheckBox
           android:id="@+id/checkbox_keep"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:textStyle="italic"
           android:textSize="12sp"
           android:layout_alignParentTop="true"
           android:layout_marginRight="37dp"
           android:text="Keep me signed in" />

   </RelativeLayout>

</LinearLayout>
